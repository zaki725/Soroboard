{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma": "prisma",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate:test": "prisma migrate dev",
    "prisma:reset:dev": "prisma migrate reset",
    "prisma:reset:test": "prisma migrate reset",
    "db:drop": "ts-node scripts/drop-database.ts",
    "db:unlock": "ts-node scripts/unlock-database.ts",
    "db:reset": "npm run db:drop && ts-node scripts/remove-migrations.ts",
    "prisma:studio": "prisma studio",
    "prisma:studio:test": "prisma studio",
    "prisma:seed:dev": "ts-node prisma/seed.ts",
    "prisma:seed:test": "ts-node prisma/seed.ts",
    "seed": "ts-node prisma/seed.ts",
    "seed:dev": "prisma migrate deploy && ts-node prisma/seed.ts",
    "test:setup": "prisma generate && prisma migrate deploy",
    "test:dev": "jest",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/client": "6.18.0",
    "@types/pg": "^8.15.6",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "exceljs": "^4.4.0",
    "express-session": "^1.18.1",
    "nestjs-cls": "^6.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prisma": "6.18.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
